<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/hospitalmanagement?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">apcl123456</property>
    <property name="hibernate.current_session_context_class">thread</property>
    <mapping resource="com/pojo/Department.hbm.xml"/>
    <mapping resource="com/pojo/Receptionist.hbm.xml"/>
    <mapping resource="com/pojo/BillRoom.hbm.xml"/>
    <mapping resource="com/pojo/Pharmasist.hbm.xml"/>
    <mapping resource="com/pojo/EmployeeTable.hbm.xml"/>
    <mapping resource="com/pojo/Nurse.hbm.xml"/>
    <mapping resource="com/pojo/Laboratorist.hbm.xml"/>
    <mapping resource="com/pojo/LabTable.hbm.xml"/>
    <mapping resource="com/pojo/Accountant.hbm.xml"/>
    <mapping resource="com/pojo/DoctorTable.hbm.xml"/>
    <mapping resource="com/pojo/RoomTable.hbm.xml"/>
    <mapping resource="com/pojo/PatientTable.hbm.xml"/>
    <mapping resource="com/pojo/Contact.hbm.xml"/>
    <mapping resource="com/pojo/Admin.hbm.xml"/>
    <mapping resource="com/pojo/Login.hbm.xml"/>
    <mapping resource="com/pojo/InpatientTable.hbm.xml"/>
    <mapping resource="com/pojo/OutpatientTable.hbm.xml"/>
    <mapping resource="com/pojo/User.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
